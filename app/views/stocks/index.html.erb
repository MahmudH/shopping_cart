<% if @stocks.any? %>
  <% @stocks.each do |stock_item| %>
    <h3> <%= link_to stock_item.name, stock_path(stock_item) %> </h3>
    <%= link_to 'Edit item', edit_stock_path(stock_item) %>
    <%= link_to 'Delete item', stock_path(stock_item), method: :delete %>
  <% end %>
<% else %>
  No clothing items availiable
<% end %>

<%= link_to "Add new item to stock", new_stock_path, class: "btn btn-default" %>
