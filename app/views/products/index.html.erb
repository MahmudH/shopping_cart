<% if @products.any? %>
  <% @products.each do |product| %>
    <h3> <%= link_to product.name, product_path(product) %> </h3>
    <%= link_to 'Edit item', edit_product_path(product) %>
    <%= link_to 'Delete item', product_path(product), method: :delete %>
    <%= link_to 'Add to cart', new_product_cart_path(product) %>
  <% end %>
<% else %>
  No clothing items availiable
<% end %>

<%= link_to "Add new item to product", new_product_path, class: "btn btn-default" %>
